include ./layout
block content
  .row
    .col-lg-6.col-lg-offset-3
      .well
        form.form(method="post", action="/login")
          .form-group
            label Username
            input.form-control(name="username", type="text")
          .form-group
            label Password
            input.form-control(name="password", type="password")
          .form-group
            input.btn.btn-primary(type="submit", value="Login")
